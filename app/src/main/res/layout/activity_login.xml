<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_celular"
    tools:context=".ui.activity.LoginActivity">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gradient_180deg_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/login_txtTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/muli"
        android:text="@string/titulo_login"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/login_label_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/e_mail"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/login_edit_email"
        app:layout_constraintStart_toStartOf="@+id/login_edit_email" />

    <EditText
        android:id="@+id/login_edit_email"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_margin="16dp"
        android:background="@drawable/input_branco"
        android:hint="@string/e_mail"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_txtTitulo"
        app:layout_constraintVertical_bias="0.050000012"
        android:autofillHints="" />

    <TextView
        android:id="@+id/login_label_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/senha"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/login_edit_senha"
        app:layout_constraintStart_toStartOf="@+id/login_edit_senha" />

    <EditText
        android:id="@+id/login_edit_senha"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@drawable/input_branco"
        android:fontFamily="@font/muli"
        android:hint="@string/senha"
        android:inputType="textPassword"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/login_edit_email"
        app:layout_constraintStart_toStartOf="@+id/login_edit_email"
        app:layout_constraintTop_toBottomOf="@+id/login_edit_email"
        app:layout_constraintVertical_bias="0.110000014"
        android:autofillHints="" />

    <Button
        android:id="@+id/login_btnEntrar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/botao_azul_redondo"
        android:fontFamily="@font/muli"
        android:text="@string/btn_entrar"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/login_edit_senha"
        app:layout_constraintStart_toStartOf="@+id/login_edit_senha"
        app:layout_constraintTop_toBottomOf="@+id/login_edit_senha"
        app:layout_constraintVertical_bias="0.13" />

    <TextView
        android:id="@+id/login_esqueceu_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/muli"
        android:text="@string/lbl_reset_senha"
        android:textColor="#2196f3"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_btnEntrar"
        app:layout_constraintVertical_bias="0.120000005" />

</androidx.constraintlayout.widget.ConstraintLayout>